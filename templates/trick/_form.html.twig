{{ form_widget(form._token) }}
                    {{ form_errors(form) }}

<div class="row">
    <div class="col-5">
        <h3>Image</h3>
        <br>
        <button type="button" class="btn btn-success btn-new" data-collection="#pictures">Nouvelle Image</button>
        <br>
        <br>
        <div id="pictures" class="row"
             data-prototype="{{ include("trick/_picture.html.twig", {form: form.pictures.vars.prototype})|e("html_attr") }}"
             data-index="{{ form.pictures|length > 0 ? form.pictures|last.vars.name + 1 : 0 }}">
            {% for picture in form.pictures %}
                <div class="col-4 px-2">

                    <div class="visually-hidden">{{ form_row(picture.file) }}</div>
                    {% if picture.vars.value.fileName is not empty %}
                        <img src="{{ picture.vars.value.fileName }}" alt="test" class="card-img"/>
                    {% endif %}
                    <br>
                    <div class="form-group">
                        <button type="button" class="btn btn-danger btn-remove">Supprimer</button>
                    </div>
                </div>
            {% endfor %}
        </div>
        {{ form_errors(form.pictures) }}
    </div>
    <div class="col-5">
        <h3>Vid√©o</h3>
        <br>
        <button type="button" class="btn btn-success btn-new" data-collection="#videos">Nouvelle Video</button>
        <br>
        <br>
        <div id="videos" class="row"
             data-prototype="{{ include("trick/_video.html.twig", {form: form.videos.vars.prototype})|e("html_attr") }}"
             data-index="{{ form.videos|length > 0 ? form.videos|last.vars.name + 1 : 0 }}">
            {% for video in form.videos %}
                <div class="col-4 px-2">
                    {{ form_row(video.url) }}
                    <br>
                    <div class="form-group">
                        <button type="button" class="btn btn-danger btn-remove">Supprimer</button>
                    </div>
                </div>
            {% endfor %}
        </div>
        {{ form_errors(form.videos) }}
    </div>
</div>
<br>
<div class="row">
    <div class="col-sm-12" style="margin-top: 1.2em;">
        {{ form_row(form.name) }}
        {{ form_row(form.content) }}
        <br>
        {{ form_row(form.category) }}
        <button class="btn btn-primary mb-5" type="submit">Enregister la figure</button>
    </div>
</div>