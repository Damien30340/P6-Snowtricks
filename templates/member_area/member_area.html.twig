{% extends 'base.html.twig' %}

{% block title %}Espace membre
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('assets/js/modal.js') }}" defer></script>
{% endblock %}
{% block body %}
	<div class="container-fluid">
		<div class="row mt-5 justify-content-center text-center">
			<div class="col-8 mb-3">
				<h1>Bonjour
					{{ user.username }}
					{% if user.avatar is defined %}
						<p>
						<img src="{{ user.avatar }}" alt="" style="height: auto; width: 100px;">
						</p>
					{% endif %}
				</h1>

				<hr></div>
		</div>
		<div class="row justify-content-center text-center">
			<div class="col-md-4 mb-4">
				<h3>Avatar
				</h3>
				<br>
				{{ form_start(form) }}
				{{ form_row(form.avatar, {'attr': {'class': 'form-control'}}) }}
				<button type="submit" class="btn btn-primary">Ajouter mon avatar</button>
				{{ form_end(form) }}
			</div>
			<div class="col-md-4 mb-4">
				<h3>Vos informations
				</h3>
				<p>Votre pseudo :
					{{ user.username }}
					<br>
					Votre adresse email :
					{{ user.email }}</p>
				<span><button class="btn btn-danger btn-sm" id="button-remove-account" data-link="/deleteAccount"><i class="bi bi-trash"></i> Supprimer mon compte</button></span>
			</div>
		</div>
		<br>
	</div>
{% endblock %}
